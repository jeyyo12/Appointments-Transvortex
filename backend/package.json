    "express-validator": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "pg": "^8.9.0",
    "knex": "^2.5.1",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-async-errors": "^3.1.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.44.0",
