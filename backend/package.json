{
  "name": "facebook-pages-manager-backend",
  "version": "1.0.0",
  "description": "Secure backend for Facebook Pages Manager - Transvortex LTD",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
